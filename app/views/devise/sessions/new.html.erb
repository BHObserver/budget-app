<section class="new-expense-section">
  <h2 class="form-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="check-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions field">
      <%= f.submit "Log in", class: 'submit-btn' %>
    </div>
  <% end %>
  <div class="field">
    <%= render "devise/shared/links" %>
  </div>
</section>
