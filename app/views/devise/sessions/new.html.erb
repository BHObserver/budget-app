<div class="heading">
<%= link_to(unauthenticated_root_path) do %>
  <%= image_tag("left-arrow.svg", alt: "Back Arrow", class: 'back-icon') %>
<% end %>
  <h2 class="page-name">LOGIN</h2>
  <div class="empty-div"></div>
</div>

<section class="new-expense-section">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-container">
      <div class="field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, class: "input_login",  placeholder: 'Email', autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: "input_login", placeholder: 'Password', autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="check-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions field">
      <%= f.submit "Log in", class: 'submit-btn' %>
    </div>
  <% end %>
  <div class="shared-links-container">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'shared-link' %><br />
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'shared-link' %><br />
    <% end %>
  </div>
</section>
